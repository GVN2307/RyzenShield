{
  "manifest_version": 3,
  "name": "RyzenShield AI Firewall",
  "version": "1.0",
  "description": "NPU-accelerated AI Firewall protecting your prompts on ChatGPT and Claude.",
  "permissions": [
    "storage",
    "nativeMessaging",
    "notifications"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
